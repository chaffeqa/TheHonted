<h1>Listing heros</h1>

<table>
 
<% @heros.each do |hero| %>
  <% count += 1 %>
  <tr>
    <td><%= render 'thumbnail', :locals => {:hero => hero} %></td>
    <td><%= hero.name %></td>
    <td><%= link_to 'Show', hero %></td>
    <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
    <td><%= link_to 'Destroy', hero, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Hero', new_hero_path %>
